{
  "dependencies": {
    "@temporalio/client": "^1.9.0",
    "@temporalio/worker": "^1.9.0",
    "@temporalio/workflow": "^1.9.0",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^7.0.4",
